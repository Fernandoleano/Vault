<div class="max-w-md mx-auto">
  <div class="mb-8">
    <%= link_to credentials_path, class: "text-gray-500 hover:text-white text-sm flex items-center gap-1 mb-4 transition-colors" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
      Back to Vault
    <% end %>
    <h1 class="text-3xl font-bold text-white">Edit Password</h1>
    <p class="text-gray-500 mt-2">Update your credential details.</p>
  </div>

  <div class="bg-gray-900/50 border border-gray-800 rounded-2xl p-8 backdrop-blur-sm">
    <%= render "form", credential: @credential %>
  </div>
</div>
